ass=\"mb-3\">\n                    <p v-for=\"(option, index) in pollData.options\" :key=\"index\">\n                      <input :value=\"option\" class=\"form-control form-control-sm w-75 mr-2\" readonly>\n                      <span @click=\"removeOption(index)\" style=\"cursor: pointer; font-size: 12px;\">X</span>\n                    </p>\n                  </div>\n\n                  <div v-if=\"showForm\">\n                      <div class=\"row mb-3\">\n                        <div class=\"col-md-12\">\n                          <div class=\"input-group\">\n                            <form @submit.prevent=\"addOption\" class=\"w-100\">\n                                <div class=\"input-group mb-2 mr-sm-2\">\n                                  <input v-model=\"option\" type=\"text\" class=\"form-control form-control-sm\" placeholder=\"Add Option\" :readonly=\"!isQuestionAvailable\">\n                                  <div class=\"input-group-append\">\n                                    <button type=\"submit\" class=\"btn waves-effect waves-light btn-primary btn-sm\" :disabled=\"!submitable\">\n                                      add\n                                    </button>\n                                  </div>\n                                </div>\n                            </form>\n                            <p class=\"mt-3\"><small>Duration:</small></p>\n                            <div class=\"row ml-1 mt-3\">\n                              <div class=\"col-3\">\n                                <select class=\"custom-select\">\n                                  <option value=\"1\">1</option>\n                                  <option value=\"2\">2</option>\n                                  <option value=\"3\">3</option>\n                                </select>\n                                Days\n                              </div>\n                              <div class=\"col-3\">\n                                <select class=